// FUNCTION
def is_leap(year):
    leap = False
    // checking if the year is divisible by 4 and not 100 or if its divisible by 400
    if (year % 4==0 and year % 100 !=0) or year % 400 ==0:
    {
        leap= True
    }
    // returns boolean truth or false
    return leap
// getting user input
year = int(input())
